<div class="filter flex-1 min-w-37.5 relative">
  <label class="filter-label block text-sm mb-1 text-secondary">▼ Date Range</label>
  <div class="custom-select relative w-full" id="interval-select" data-param="interval">
    <div class="select-header-container flex items-center border border-darkless rounded bg-darkless m-0 p-0">
      <div class="select-header flex-1 px-3 py-2 text-sm cursor-pointer select-none text-gray-200 m-0 bg-transparent" id="interval-header">
        <%= human_interval_name(selected_interval, from: selected_from, to: selected_to) %>
      </div>
      <button class="clear-button px-2 py-1.5 text-base leading-none text-secondary bg-transparent border-0 border-l border-dark cursor-pointer m-0 hover:text-red hover:bg-dark <%= selected_interval.blank? && selected_from.blank? && selected_to.blank? ? 'hidden' : '' %>" id="interval-clear-button">×</button>
    </div>
    <div class="options-container absolute top-full left-0 right-0 bg-darkless border border-darkless rounded mt-1 shadow-lg z-1000 p-0" id="interval-options" style="display: none;">
      <div class="options-list overflow-y-auto p-0 m-0 max-h-48 [scrollbar-width:none] [-ms-overflow-style:none] [&::-webkit-scrollbar]:hidden">
        <% TimeRangeFilterable::RANGES.each do |key, config| %>
          <label class="option flex items-center px-2 py-1.5 cursor-pointer text-sm text-gray-200 m-0 bg-transparent hover:bg-dark" data-interval-key="<%= key %>" data-interval-label="<%= config[:human_name] %>">
            <input type="radio" name="interval-option" class="mr-2 mb-0 h-3.5 w-3.5 min-w-3.5 appearance-none border border-secondary rounded-full bg-dark relative cursor-pointer p-0 checked:bg-primary checked:border-primary hover:border-primary" value="<%= key %>" <%= 'checked' if selected_interval == key.to_s %>>
            <span><%= config[:human_name] %></span>
          </label>
        <% end %>
        <label class="option flex items-center px-2 py-1.5 cursor-pointer text-sm text-gray-200 m-0 bg-transparent hover:bg-dark" data-interval-key="" data-interval-label="All Time">
          <input type="radio" name="interval-option" class="mr-2 mb-0 h-3.5 w-3.5 min-w-3.5 appearance-none border border-secondary rounded-full bg-dark relative cursor-pointer p-0 checked:bg-primary checked:border-primary hover:border-primary" value="" <%= 'checked' if selected_interval.blank? && selected_from.blank? && selected_to.blank? %>>
          <span>All Time</span>
        </label>
      </div>
      <hr class="my-2 border-gray-700 mx-2">
      <div class="flex flex-col gap-2 px-2 pb-2">
        <label class="flex items-center justify-between text-sm text-gray-200">Start:
          <input type="date" class="ml-2 py-1 px-2 bg-dark border border-gray-700 rounded text-sm text-gray-200" id="interval-custom-start" value="<%= selected_from %>">
        </label>
        <label class="flex items-center justify-between text-sm text-gray-200">End:
          <input type="date" class="ml-2 py-1 px-2 bg-dark border border-gray-700 rounded text-sm text-gray-200" id="interval-custom-end" value="<%= selected_to %>">
        </label>
        <button type="button" class="px-3 py-2 mt-1 rounded font-semibold transition cursor-pointer bg-primary text-white hover:bg-primary/80" id="interval-apply-custom">Apply Custom Range</button>
      </div>
    </div>
  </div>
</div>
